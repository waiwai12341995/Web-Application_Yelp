<% include ./partials/header %>


<div class="ui main text container">
    <div class="ui huge header">Fish Blog App</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% blogs.forEach(function(blog){ %>
            <div class="item">
                <div class="image">
                     <img src = "<%= blog.image %>"><br>
                </div>
                
                <div class="content">
                    <a class="header" href="/blogs/<%= blog._id %>"><%= blog.title %></a>
                    <div class="meta">
                        <span><%= blog.createdDate.toDateString() %></span>
                    </div>
                </div>
                
                <div class="description">
                    <p><%= blog.body.substring(0,100) %></p>
                </div>
        
                <br>
                
                <div class="field">
                    <a class="ui basic blue button" href="/blogs/<%= blog._id %>">Read More</a>
                </div>

            </div>
            <% }); %>
            </div>
        </div>
    </div>
</div>


<% include ./partials/footer %>
